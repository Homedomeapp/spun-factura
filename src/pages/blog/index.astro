    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    max-width: 1100px;
    margin: 0 auto;
  }

  @media (max-width: 900px) {
    .recursos-grid {
      grid-template-columns: 1fr;
    }
  }

  .recurso-card {
    background: white;
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: 16px;
    padding: 28px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
    display: flex;
    flex-direction: column;
  }

  .recurso-card:hover {
    border-color: var(--color-primary, #34ced6);
    box-shadow: 0 8px 24px rgba(52, 206, 214, 0.15);
    transform: translateY(-4px);
  }

  .recurso-badge {
    display: inline-block;
    background: var(--color-bg-section, #f0fdfa);
    color: var(--color-primary-dark, #0d9488);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 4px 12px;
    border-radius: 20px;
    margin-bottom: 16px;
    width: fit-content;
  }

  .recurso-card h3 {
    font-size: 1.125rem;
    margin-bottom: 8px;
    line-height: 1.4;
  }

  .recurso-card p {
    color: var(--color-text-muted, #6b7280);
    font-size: 0.9375rem;
    flex-grow: 1;
    margin-bottom: 16px;
    line-height: 1.6;
  }

  .recurso-link {
    color: var(--color-primary-dark, #0d9488);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .recursos-cta {
    text-align: center;
    margin-top: 40px;
  }

  .btn-secondary {
    display: inline-block;
    padding: 12px 28px;
    border: 2px solid var(--color-primary, #34ced6);
    color: var(--color-primary-dark, #0d9488);
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-secondary:hover {
    background: var(--color-primary, #34ced6);
    color: white;
  }

  /* ==========================================
     ESTILOS NUEVOS: Sección FAQ
     ========================================== */
  .faq-section {
    padding: 80px 24px;
    background: var(--color-bg-alt, #f9fafb);
  }

  .faq-section h2 {
    text-align: center;
    margin-bottom: 48px;
    font-size: 2rem;
  }

  .faq-grid {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .faq-item {
    background: white;
    border-radius: 12px;
    border: 1px solid var(--color-border, #e5e7eb);
    overflow: hidden;
  }

  .faq-item summary {
    padding: 20px 24px;
    font-weight: 600;
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary::after {
    content: '+';
    font-size: 1.5rem;
    color: var(--color-primary, #34ced6);
    transition: transform 0.2s;
    flex-shrink: 0;
    margin-left: 16px;
  }

  .faq-item[open] summary::after {
    content: '−';
  }

  .faq-item p {
    padding: 0 24px 20px;
    color: var(--color-text-muted, #6b7280);
    line-height: 1.7;
    margin: 0;
  }

  .faq-item a {
    color: var(--color-primary-dark, #0d9488);
  }

  /* ==========================================
     ESTILOS BASE (ajustar a tu tema)
     ========================================== */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .hero {
    padding: 100px 24px 80px;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted, #6b7280);
    max-width: 600px;
    margin: 0 auto 32px;
  }

  .btn-primary {
    display: inline-block;
    padding: 16px 32px;
    background: var(--color-primary, #34ced6);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark, #0d9488);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }
    
    .faq-item summary {
      padding: 16px 20px;

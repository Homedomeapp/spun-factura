---
/**
 * Blog Index de Spun Factura con SEO optimizado
 * Incluye: ItemList schema, CollectionPage schema, cards mejoradas con imagen/excerpt
 * 
 * INSTRUCCIONES:
 * 1. Copia este archivo a src/pages/blog/index.astro
 * 2. Asegúrate de que tus posts tienen: title, description, publishedDate, category (opcional), image (opcional)
 */

import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';

// Obtener posts ordenados por fecha
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts.sort((a, b) => 
  new Date(b.data.publishedDate).valueOf() - new Date(a.data.publishedDate).valueOf()
);

// ==============================================
// NUEVO: ItemList Schema
// ==============================================
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Blog de Spun Factura",
  "description": "Guías prácticas sobre facturación electrónica, Verifactu, IVA en construcción y reformas",
  "numberOfItems": posts.length,
  "itemListElement": posts.map((post, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "BlogPosting",
      "@id": `https://factura.spun.es/blog/${post.slug}`,
      "url": `https://factura.spun.es/blog/${post.slug}`,
      "headline": post.data.title,
      "description": post.data.description,
      "datePublished": new Date(post.data.publishedDate).toISOString(),
      "author": {
        "@type": "Organization",
        "name": "Spun"
      }
    }
  }))
};

// ==============================================
// NUEVO: CollectionPage Schema
// ==============================================
const collectionSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Blog | Spun Factura",
  "description": "Artículos sobre facturación electrónica para profesionales de construcción y reformas. Verifactu, IVA 10%, retenciones y más.",
  "url": "https://factura.spun.es/blog",
  "isPartOf": {
    "@type": "WebSite",
    "@id": "https://factura.spun.es/#website"
  },
  "about": [
    { "@type": "Thing", "name": "Facturación electrónica" },
    { "@type": "Thing", "name": "Verifactu" },
    { "@type": "Thing", "name": "IVA en reformas" },
    { "@type": "Thing", "name": "Construcción" }
  ]
};

// ==============================================
// Helper: Imagen por defecto según categoría
// ==============================================
function getDefaultImage(category?: string): string {
  const defaults: Record<string, string> = {
    'Verifactu': '/images/blog/default-verifactu.jpg',
    'Fiscalidad': '/images/blog/default-fiscalidad.jpg',
    'Autónomos': '/images/blog/default-autonomos.jpg',
    'Normativa': '/images/blog/default-normativa.jpg'
  };
  return category && defaults[category] 
    ? defaults[category] 
    : '/images/blog/default-blog.jpg';
}

// Calcular tiempo de lectura aproximado
function getReadingTime(content: string): number {
  const wordsPerMinute = 200;
  const wordCount = content.split(/\s+/).length;
  return Math.ceil(wordCount / wordsPerMinute);
}
---

<Base 
  title="Blog | Spun Factura" 
  description="Artículos sobre facturación electrónica para profesionales de construcción y reformas. Verifactu, IVA 10%, retenciones y más."
>
  <!-- Schemas SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(itemListSchema)} slot="head" />
  <script type="application/ld+json" set:html={JSON.stringify(collectionSchema)} slot="head" />

  <main>
    <div class="blog-container">
      <!-- Header -->
      <header class="blog-header">
        <h1>Blog</h1>
        <p class="blog-subtitle">Guías prácticas sobre facturación, fiscalidad y normativa para profesionales de construcción y reformas</p>
      </header>
      
      <!-- Filtros de categoría (visual, las páginas se crean en siguiente iteración) -->
      <nav class="blog-filters" aria-label="Filtrar por categoría">
        <a href="/blog" class="filter-btn active">Todos</a>
        <a href="/blog/categoria/verifactu" class="filter-btn">Verifactu</a>
        <a href="/blog/categoria/fiscalidad" class="filter-btn">Fiscalidad</a>
        <a href="/blog/categoria/autonomos" class="filter-btn">Autónomos</a>
      </nav>
      
      <!-- Grid de posts -->
      <div class="posts-grid">
        {posts.map((post, index) => (
          <article class={`post-card ${index === 0 ? 'featured' : ''}`}>
            <!-- Imagen -->
            <a href={`/blog/${post.slug}`} class="post-image">
              <img 
                src={post.data.image || getDefaultImage(post.data.category)} 
                alt={post.data.imageAlt || post.data.title}
                loading={index < 3 ? 'eager' : 'lazy'}
                width="400"
                height="225"
              />
            </a>
            
            <!-- Contenido -->
            <div class="post-content">
              <!-- Meta: categoría, fecha, tiempo lectura -->
              <div class="post-meta">
                {post.data.category && (
                  <span class="post-category">{post.data.category}</span>
                )}
                <time datetime={post.data.publishedDate}>
                  {new Date(post.data.publishedDate).toLocaleDateString('es-ES', {
                    day: 'numeric',
                    month: 'short',
                    year: 'numeric'
                  })}
                </time>
                {post.data.readingTime && (
                  <span class="reading-time">{post.data.readingTime} min</span>
                )}
              </div>
              
              <!-- Título -->
              <h2 class="post-title">
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h2>
              
              <!-- Excerpt (description) -->
              <p class="post-excerpt">{post.data.description}</p>
              
              <!-- Link -->
              <a href={`/blog/${post.slug}`} class="post-link">
                Leer artículo <span aria-hidden="true">→</span>
              </a>
            </div>
          </article>
        ))}
      </div>
      
      <!-- CTA final -->
      <div class="blog-cta">
        <p>¿Tienes dudas sobre facturación en construcción?</p>
        <a href="/#reservar" class="btn-primary">Reserva tu plaza en Spun Factura</a>
      </div>
    </div>
  </main>
</Base>

<style>
  /* ==========================================
     BLOG INDEX STYLES
     ========================================== */
  
  .blog-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Header */
  .blog-header {
    text-align: center;
    padding: 60px 0 40px;
  }

  .blog-header h1 {
    font-size: 2.5rem;
    margin-bottom: 12px;
    color: var(--color-text, #1f2937);
  }

  .blog-subtitle {
    color: var(--color-text-muted, #6b7280);
    font-size: 1.125rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Filtros de categoría */
  .blog-filters {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 48px;
    padding-bottom: 24px;
    border-bottom: 1px solid var(--color-border, #e5e7eb);
  }

  .filter-btn {
    padding: 8px 20px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--color-text-muted, #6b7280);
    background: var(--color-bg-alt, #f3f4f6);
    transition: all 0.2s;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: var(--color-primary, #34ced6);
    color: white;
  }

  /* Grid de posts */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-bottom: 60px;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Post card */
  .post-card {
    background: white;
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.2s;
    display: flex;
    flex-direction: column;
  }

  .post-card:hover {
    border-color: var(--color-primary, #34ced6);
    box-shadow: 0 8px 24px rgba(52, 206, 214, 0.12);
    transform: translateY(-4px);
  }

  /* Featured post (primer artículo) */
  .post-card.featured {
    grid-column: 1 / -1;
  }

  @media (min-width: 769px) {
    .post-card.featured {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
    
    .post-card.featured .post-image {
      aspect-ratio: auto;
      min-height: 100%;
    }
    
    .post-card.featured .post-content {
      padding: 32px;
    }
    
    .post-card.featured .post-title {
      font-size: 1.5rem;
    }
  }

  /* Imagen */
  .post-image {
    display: block;
    aspect-ratio: 16/9;
    overflow: hidden;
    background: var(--color-bg-alt, #f3f4f6);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  /* Contenido */
  .post-content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  /* Meta: categoría, fecha, tiempo */
  .post-meta {
    display: flex;
    gap: 12px;
    align-items: center;
    font-size: 0.8125rem;
    color: var(--color-text-muted, #6b7280);
    margin-bottom: 12px;
    flex-wrap: wrap;
  }

  .post-category {
    background: var(--color-bg-section, #f0fdfa);
    color: var(--color-primary-dark, #0d9488);
    padding: 4px 12px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.75rem;
  }

  .reading-time::before {
    content: '•';
    margin-right: 12px;
  }

  /* Título */
  .post-title {
    font-size: 1.25rem;
    line-height: 1.4;
    margin-bottom: 8px;
  }

  .post-title a {
    color: inherit;
    text-decoration: none;
  }

  .post-title a:hover {
    color: var(--color-primary-dark, #0d9488);
  }

  /* Excerpt */
  .post-excerpt {
    color: var(--color-text-muted, #6b7280);
    font-size: 0.9375rem;
    line-height: 1.6;
    flex-grow: 1;
    margin-bottom: 16px;
    
    /* Limitar a 3 líneas */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Link "Leer artículo" */
  .post-link {
    color: var(--color-primary-dark, #0d9488);
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .post-link:hover {
    color: var(--color-primary, #34ced6);
  }

  .post-link span {
    transition: transform 0.2s;
  }

  .post-link:hover span {
    transform: translateX(4px);
  }

  /* CTA final */
  .blog-cta {
    text-align: center;
    padding: 60px 24px;
    background: var(--color-bg-alt, #f3f4f6);
    border-radius: 16px;
    margin-bottom: 60px;
  }

  .blog-cta p {
    font-size: 1.25rem;
    margin-bottom: 20px;
    color: var(--color-text, #1f2937);
  }

  .btn-primary {
    display: inline-block;
    padding: 16px 32px;
    background: var(--color-primary, #34ced6);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark, #0d9488);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-header h1 {
      font-size: 2rem;
    }
    
    .blog-header {
      padding: 40px 0 30px;
    }
    
    .post-content {
      padding: 20px;
    }
  }
</style>
